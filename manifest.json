{
    "manifest_version": 3,
    "name": "Twitter 1Click Block",
    "version": "1.0",
    "author": "selimgr",

    "description": "Block any user with a single click on their tweet",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },

    "content_scripts": [
        {
            "matches": ["https://twitter.com/*"],
            "css": ["style.css"],
            "js": ["content.js"],
            "run_at": "document_start"
        }
    ]
}